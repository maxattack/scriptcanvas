
$#include "Script.h"

typedef unsigned int ID;

struct Node {
	ID id();

	void attach(Node child);
	void detach();
	Node* parent();

	void get_position(float* x=0, float* y=0);
	void set_position(float x, float y);
	void set_rotation(float radians);

	void add_component(ID componentType);
	void remove_component(ID componentType);

	void destroy();
};

Node* create_node(Node* parent=0);
